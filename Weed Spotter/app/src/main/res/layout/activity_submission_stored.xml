<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="knightwing.ws.weedspotter.Views.Activities.SubmissionStages.SubmissionStoredActivity"
    android:gravity="center"
    android:orientation="vertical">


    <!-- Image source: http://www.iconsdb.com/royal-blue-icons/info-icon.html; Provided as
         CC0 1.0 Universal (CC0 1.0) Public Domain Dedication -->
    <ImageView
        android:id="@+id/informationAlertPoint"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/infopoint" />

    <TextView
        android:id="@+id/notificationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/store_notification_message"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/startOver"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@color/colorButton"
        android:onClick="startOver"
        android:text="@string/start_over_button_text"
        android:textColor="#ffffff"/>
</LinearLayout>
